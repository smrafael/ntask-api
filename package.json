{
  "name": "ntask-api",
  "version": "1.0.0",
  "description": "API for tasks management",
  "main": "index.js",
  "scripts": {
    "start": "npm run apidoc && babel-node index.js",
    "build": "babel index.js -d dist",
    "apidoc": "apidoc -i routes/ -o public/apidoc",
    "test": "NODE_ENV=test mocha test/**/*.js"
  },
  "apidoc": {
    "name": "Documentação - Node Task API",
    "template": {
      "forceLanguage": "pt_br"
    }
  },
  "author": "Rafael de Souza Mendes",
  "license": "ISC",
  "devDependencies": {
    "apidoc": "~0.17.6",
    "babel-cli": "~6.26.0",
    "babel-preset-env": "~1.6.0",
    "babel-register": "~6.26.0",
    "chai": "~4.1.2",
    "mocha": "~3.5.3",
    "supertest": "~3.0.0"
  },
  "dependencies": {
    "bcrypt": "~1.0.3",
    "body-parser": "~1.18.1",
    "consign": "~0.1.6",
    "express": "~4.15.4",
    "jwt-simple": "~0.5.1",
    "passport": "~0.4.0",
    "passport-jwt": "~3.0.0",
    "sequelize": "~4.8.4",
    "sqlite3": "~3.1.11"
  }
}
